<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:ignore="UseCompoundDrawables"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/list_row_padding"
              android:background="@drawable/selector_item_user"
    >

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/list_row_icon_width"
        android:layout_height="@dimen/list_row_icon_width"
        android:paddingLeft="@dimen/list_row_icon_padding"
        android:paddingRight="@dimen/list_row_icon_padding"
        android:contentDescription="@string/string_content_description"
        />

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/list_row_text_size"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        />

</LinearLayout>
